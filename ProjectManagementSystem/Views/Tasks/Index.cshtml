@model IEnumerable<ProjectManagementSystem.Models.ProjectTask>

@{
    ViewData["Title"] = "Tasks";
}

<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
        padding: 20px 0;
    }
    .table-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.08);
        padding: 20px;
        margin-bottom: 20px;
    }
    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 24px;
    }
    .btn-primary {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        font-weight: 500;
        transition: box-shadow 0.2s;
    }
    .btn-primary:hover {
        box-shadow: 0 4px 16px rgba(44,62,80,0.16);
        background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
    }
    .table {
        margin-bottom: 0;
    }
    .table th {
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
    }
    .action-links a {
        margin: 0 5px;
        color: #4e54c8;
        text-decoration: none;
    }
    .action-links a:hover {
        color: #8f94fb;
    }
</style>

<div class="container">
    <h1 class="page-title">Tasks for Project</h1>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Assigned To</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Description</td>
                        <td>@(task.AssignedUser?.Name ?? "None")</td>
                        <td class="action-links">
                            <a asp-action="Details" asp-route-id="@task.Id">Details</a> |
                            <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-primary">Create New Task</a>
        <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn btn-secondary">Back to Project</a>
    </div>
</div>