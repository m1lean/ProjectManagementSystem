@model IEnumerable<ProjectManagementSystem.Models.ProjectTask>

@{
    ViewData["Title"] = "Tasks";
}

<style>
    body { font-family: Arial, sans-serif; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
    button { background-color: #4CAF50; color: white; padding: 10px; border: none; cursor: pointer; }
    a { color: #2196F3; text-decoration: none; }
</style>

<h1>Tasks for Project</h1>

<table>
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Assigned To</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var task in Model)
    {
        <tr>
            <td>@task.Title</td>
            <td>@task.Description</td>
            <td>@(task.AssignedUser?.Name ?? "None")</td>
            <td>
                <a asp-action="Details" asp-route-id="@task.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@task.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@task.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" asp-route-projectId="@ViewBag.ProjectId" class="btn btn-success me-2">Create New Task</a>
<a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn btn-secondary">Back to Project</a>