@model ProjectManagementSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1>@Model.Name</h1>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<div class="mb-4">
    <h3>Assigned Tasks</h3>
    <p>Tasks for this user are available in the <a asp-controller="Tasks" asp-action="Index">Tasks</a> section. Use filters to find tasks assigned to this user.</p>
</div>

<div class="mb-4">
    <h3>Projects</h3>
    <p>Projects involving this user are listed in the <a asp-controller="Projects" asp-action="Index">Projects</a> section.</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>