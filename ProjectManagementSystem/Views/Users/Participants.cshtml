@using Microsoft.AspNetCore.Mvc.Rendering
@model IEnumerable<ProjectManagementSystem.Models.User>

@{
    ViewData["Title"] = "Project Participants";
}

<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
        padding: 20px 0;
    }
    .participants-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.08);
        padding: 20px;
        margin-bottom: 20px;
    }
    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 24px;
    }
    .table {
        margin-bottom: 0;
    }
    .table th {
        background: #f8f9fa;
        border-bottom: 2px solid #dee2e6;
        color: #2c3e50;
    }
    .btn-remove {
        background: linear-gradient(90deg, #ff416c 0%, #ff4b2b 100%);
        border: none;
        color: white;
        padding: 5px 15px;
        border-radius: 6px;
        transition: all 0.2s;
    }
    .btn-remove:hover {
        box-shadow: 0 4px 16px rgba(255,65,108,0.3);
        background: linear-gradient(90deg, #ff4b2b 0%, #ff416c 100%);
    }
    .add-form {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.08);
        padding: 20px;
        margin: 20px 0;
    }
    .btn-add {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        color: white;
        padding: 8px 20px;
        border-radius: 6px;
        transition: all 0.2s;
    }
    .btn-add:hover {
        box-shadow: 0 4px 16px rgba(78,84,200,0.3);
        background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
    }
    .form-select {
        border-radius: 6px;
        border: 1px solid #dee2e6;
        padding: 8px;
        margin-right: 10px;
    }
    .btn-back {
        color: #4e54c8;
        text-decoration: none;
        transition: color 0.2s;
    }
    .btn-back:hover {
        color: #8f94fb;
    }
</style>

<div class="container">
    <h1 class="page-title">Participants for Project</h1>

    <div class="participants-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model ?? Enumerable.Empty<User>())
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <form asp-action="RemoveParticipant" method="post" style="display:inline;">
                                <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn-remove">Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="add-form">
        <h3 class="mb-3">Add Participant</h3>
        <form asp-action="AddParticipant" method="post" class="d-flex align-items-center">
            <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
            <select name="userId" class="form-select" asp-items="@(new SelectList(ViewBag.AllUsers ?? new List<User>(), "Id", "Name"))">
                <option value="">Select user...</option>
            </select>
            <button type="submit" class="btn-add">Add</button>
        </form>
    </div>

    <a asp-controller="Projects" asp-action="Details" asp-route-id="@ViewBag.ProjectId" class="btn-back">
        <i class="fas fa-arrow-left"></i> Back to Project
    </a>
</div>