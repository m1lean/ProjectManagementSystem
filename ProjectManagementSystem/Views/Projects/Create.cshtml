@model ProjectManagementSystem.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<style>
    body { font-family: Arial, sans-serif; }
    form { max-width: 500px; }
    label { display: block; margin-top: 10px; }
    input, textarea { width: 100%; padding: 8px; }
    button { background-color: #4CAF50; color: white; padding: 10px; border: none; cursor: pointer; }
    a { color: #2196F3; text-decoration: none; }
</style>

<h1>Create Project</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name">Название проекта</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status">Статус</label>
        <select asp-for="Status" class="form-control" required>
            <option value="Open">Открыт</option>
            <option value="InProgress">В работе</option>
            <option value="Completed">Завершен</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Создать проект</button>
    </div>
</form>

<a asp-action="Index">Back</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}