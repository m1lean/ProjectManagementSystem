@model ProjectManagementSystem.Models.Project

@{
    ViewData["Title"] = "Project Details";
}

<style>
    body {
        background: linear-gradient(135deg, #e0eafc 0%, #cfdef3 100%);
        min-height: 100vh;
        padding: 20px 0;
    }
    .details-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(44,62,80,0.08);
        padding: 20px;
        margin-bottom: 20px;
    }
    .page-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 24px;
    }
    .section-title {
        font-size: 1.5rem;
        color: #34495e;
        margin: 20px 0;
    }
    .details-list {
        list-style: none;
        padding: 0;
    }
    .details-list li {
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }
    .details-list strong {
        color: #2c3e50;
        margin-right: 10px;
    }
    .btn-primary {
        background: linear-gradient(90deg, #4e54c8 0%, #8f94fb 100%);
        border: none;
        font-weight: 500;
        transition: box-shadow 0.2s;
    }
    .btn-primary:hover {
        box-shadow: 0 4px 16px rgba(44,62,80,0.16);
        background: linear-gradient(90deg, #8f94fb 0%, #4e54c8 100%);
    }
    .action-links a {
        margin: 0 5px;
        color: #4e54c8;
        text-decoration: none;
    }
    .action-links a:hover {
        color: #8f94fb;
    }
</style>

<div class="container">
    <h1 class="page-title">@Model.Name</h1>

    <div class="details-container">
        <ul class="details-list">
            <li><strong>Description:</strong> @Model.Description</li>
            <li><strong>Status:</strong> @Model.Status</li>
        </ul>
    </div>

    <div class="details-container">
        <h2 class="section-title">Tasks</h2>
        <a asp-controller="Tasks" asp-action="Index" asp-route-projectId="@Model.Id" class="btn btn-primary mb-3">View Tasks</a>
    </div>

    <div class="details-container">
        <h2 class="section-title">Participants</h2>
        <a asp-controller="Users" asp-action="Participants" asp-route-projectId="@Model.Id" class="btn btn-primary mb-3">View/Manage Participants</a>
    </div>

    <div class="action-links mt-3">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>