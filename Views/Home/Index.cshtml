@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Project Management System</h1>
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Projects</h5>
                    <p class="card-text">Total Projects: @ViewBag.ProjectCount</p>
                    <a asp-controller="Projects" asp-action="Index" class="btn btn-primary">View Projects</a>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="card-text">Total Users: @ViewBag.UserCount</p>
                    <a asp-controller="Users" asp-action="Index" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>
    </div>
</div>