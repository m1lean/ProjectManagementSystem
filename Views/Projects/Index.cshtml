@model IEnumerable<ProjectManagementSystem.Models.Project>

@{
    ViewData["Title"] = "Projects";
}

<style>
    body { font-family: Arial, sans-serif; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
    .filter-form { margin-bottom: 20px; }
    button { background-color: #4CAF50; color: white; padding: 10px; border: none; cursor: pointer; }
    a { color: #2196F3; text-decoration: none; }
</style>

<h1>Projects</h1>

<div class="filter-form">
    <form asp-action="Index">
        <label>Filter by Status:</label>
        <input type="text" name="status" value="@ViewBag.Status" />
        <button type="submit">Filter</button>
    </form>
</div>

<table>
    <thead>
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var project in Model)
    {
        <tr>
            <td>@project.Name</td>
            <td>@project.Description</td>
            <td>@project.Status</td>
            <td>
                <a asp-action="Details" asp-route-id="@project.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@project.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@project.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create">Create New Project</a>