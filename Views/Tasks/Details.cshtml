@model ProjectManagementSystem.Models.ProjectTask

@{
    ViewData["Title"] = "Task Details";
}

<style>
    body { font-family: Arial, sans-serif; }
    h2 { color: #333; }
    dl { margin: 20px 0; }
    dt { font-weight: bold; }
    a { color: #2196F3; text-decoration: none; }
</style>

<h1>@Model.Title</h1>
<dl>
    <dt>Description</dt>
    <dd>@Model.Description</dd>
    <dt>Assigned To</dt>
    <dd>@(Model.AssignedUser?.Name ?? "Unassigned")</dd>
    <dt>Project</dt>
    <dd>@(Model.Project?.Name)</dd>
</dl>

<a asp-action="Index" asp-route-projectId="@Model.ProjectId">Back to Tasks</a>